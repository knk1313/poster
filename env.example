# X API (optional / on hold)
X_API_KEY=your_x_api_key
X_API_SECRET=your_x_api_secret
X_ACCESS_TOKEN=your_x_access_token
X_ACCESS_TOKEN_SECRET=your_x_access_token_secret

# OpenAI
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4.1-mini
OPENAI_IMAGE_MODEL=dall-e-3
OPENAI_IMAGE_SIZE=1024x1024
IMAGE_OVERLAY_ENABLED=true
IMAGE_OVERLAY_TEXT=一生覚えておきたい\n心に刺さる言葉

# Content
THEME=世界の偉人と名言
SUBTHEME=文学
FIXED_HASHTAGS=#名言 #今日の偉人

# Instagram (required for posting)
IG_ACCESS_TOKEN=your_instagram_access_token
IG_USER_ID=your_instagram_user_id
IG_API_VERSION=v20.0
PUBLIC_BASE_URL=https://your-public-host

# Database
DATABASE_URL=postgresql://user:pass@localhost:5432/poster_bot

# Storage (recommended for Cloud Run)
GCS_BUCKET=your_gcs_bucket
GCS_PUBLIC=true
GCS_PREFIX=images

# Runtime
DUPLICATE_DAYS=30
MAX_TWEET_LENGTH=280
CRON_SECRET=change-me
PORT=8080
